<h1><%= @sub.name %> - <%= @topic.name %></h1>
<p><%= @topic.body %></p>
<%= link_to 'Edit Topic', edit_sub_topic_path(@sub, @topic) %>
<%= link_to 'Delete Topic', sub_topic_path(@sub, @topic), method: :delete %>
<%= link_to 'Back To Topics', sub_topics_path(@sub) %>

<%= link_to  "Add Item", new_topic_item_path(@topic) %>

<% @topic.items.each do |c| %>
  <%= render "items/item", { item: c } %>
<% end %>
